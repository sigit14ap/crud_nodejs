<% include ../layouts/head.ejs%>
<!-- =============================================== -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Blank page
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <a href="/users/">
          <button type="button" class="btn btn-default btn-lg">Back</button>
        </a><br><br>
      <!-- general form elements -->
      <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Users</h3>
          </div>
          <!-- /.box-header -->
          <!-- form start -->
          <form role="form" action="/users/save" method="post">
            <div class="box-body">
              <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="name" class="form-control" id="username" placeholder="Enter username">
              </div>
              <div class="form-group">
                <label for="position">Position</label>
                <input type="text" name="position" class="form-control" id="position" placeholder="Position">
              </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

